<?xml version="1.0" encoding="utf-8" ?>
<skin
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="skin.xsd"
  name="MenuSkin"
>

  <resources>
    <font name="MyDefaultFont" contentPath="menu_font" />
    <bitmap name="MySkinBitmap" contentPath="menu_skin" />
  </resources>

  <frames>
    <!-- Frame used for a pushbutton in its normal state -->
    
    <frame name="button.normal">
      <region source="MySkinBitmap" hplacement="left" vplacement="top" x="21" y="0" w="10" h="10" />
      <region source="MySkinBitmap" hplacement="stretch" vplacement="top" x="31" y="0" w="1" h="10" />
      <region source="MySkinBitmap" hplacement="right" vplacement="top" x="32" y="0" w="10" h="10" />
      <region source="MySkinBitmap" hplacement="left" vplacement="stretch" x="21" y="10" w="10" h="1" />
      <region source="MySkinBitmap" hplacement="stretch" vplacement="stretch" x="31" y="10" w="1" h="1" />
      <region source="MySkinBitmap" hplacement="right" vplacement="stretch" x="32" y="10" w="10" h="1" />
      <region source="MySkinBitmap" hplacement="left" vplacement="bottom" x="21" y="11" w="10" h="10" />
      <region source="MySkinBitmap" hplacement="stretch" vplacement="bottom" x="31" y="11" w="1" h="10" />
      <region source="MySkinBitmap" hplacement="right" vplacement="bottom" x="32" y="11" w="10" h="10" />
      <text font="MyDefaultFont" hplacement="center" vplacement="center" color="#EFEFEF" />
    </frame>

    <frame name="button.depressed">
      <region source="MySkinBitmap" hplacement="left" vplacement="top" x="0" y="0" w="10" h="10" />
      <region source="MySkinBitmap" hplacement="stretch" vplacement="top" x="10" y="0" w="1" h="10" />
      <region source="MySkinBitmap" hplacement="right" vplacement="top" x="11" y="0" w="10" h="10" />
      <region source="MySkinBitmap" hplacement="left" vplacement="stretch" x="0" y="10" w="10" h="1" />
      <region source="MySkinBitmap" hplacement="stretch" vplacement="stretch" x="10" y="10" w="1" h="1" />
      <region source="MySkinBitmap" hplacement="right" vplacement="stretch" x="11" y="10" w="10" h="1" />
      <region source="MySkinBitmap" hplacement="left" vplacement="bottom" x="0" y="11" w="10" h="10" />
      <region source="MySkinBitmap" hplacement="stretch" vplacement="bottom" x="10" y="11" w="1" h="10" />
      <region source="MySkinBitmap" hplacement="right" vplacement="bottom" x="11" y="11" w="10" h="10" />
    </frame>

    <frame name="window">
      <region source="MySkinBitmap" hplacement="left" vplacement="top" x="0" y="0" w="10" h="10" />
      <region source="MySkinBitmap" hplacement="stretch" vplacement="top" x="10" y="0" w="1" h="10" />
      <region source="MySkinBitmap" hplacement="right" vplacement="top" x="11" y="0" w="10" h="10" />
      <region source="MySkinBitmap" hplacement="left" vplacement="stretch" x="0" y="10" w="10" h="1" />
      <region source="MySkinBitmap" hplacement="stretch" vplacement="stretch" x="10" y="10" w="1" h="1" />
      <region source="MySkinBitmap" hplacement="right" vplacement="stretch" x="11" y="10" w="10" h="1" />
      <region source="MySkinBitmap" hplacement="left" vplacement="bottom" x="0" y="11" w="10" h="10" />
      <region source="MySkinBitmap" hplacement="stretch" vplacement="bottom" x="10" y="11" w="1" h="10" />
      <region source="MySkinBitmap" hplacement="right" vplacement="bottom" x="11" y="11" w="10" h="10" />
    </frame>
    
  </frames>

</skin>